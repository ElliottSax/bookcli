# Book Factory Environment Configuration Template
# Copy this file to .env and fill in your API keys
# NEVER commit the .env file to version control!

# ============================================
# LLM Provider API Keys
# ============================================

# Groq (Recommended - Free & Fast)
# Get key at: https://console.groq.com
GROQ_API_KEY=

# DeepSeek (Cheapest - $0.14/million tokens)
# Get key at: https://platform.deepseek.com
DEEPSEEK_API_KEY=

# OpenAI (Most Compatible)
# Get key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Anthropic Claude
# Get key at: https://console.anthropic.com
ANTHROPIC_API_KEY=

# OpenRouter (Access to multiple models)
# Get key at: https://openrouter.ai
OPENROUTER_API_KEY=

# Hugging Face (Open source models)
# Get key at: https://huggingface.co/settings/tokens
HUGGINGFACE_API_KEY=

# Qwen (Alibaba Cloud)
QWEN_API_KEY=

# ============================================
# Cloud Infrastructure (Optional)
# ============================================

# Oracle Cloud Infrastructure (for parallel generation)
OCI_CONFIG_PROFILE=DEFAULT
OCI_COMPARTMENT_ID=
OCI_SUBNET_ID=
OCI_AVAILABILITY_DOMAIN=

# AWS (future support)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

# ============================================
# Publishing Platforms (Optional)
# ============================================

# Amazon KDP
KDP_CLIENT_ID=
KDP_CLIENT_SECRET=

# Draft2Digital
D2D_API_KEY=

# ============================================
# Image Generation (Optional)
# ============================================

# DALL-E (OpenAI)
# Uses OPENAI_API_KEY

# Stable Diffusion (Replicate)
REPLICATE_API_TOKEN=

# Midjourney (via third-party)
MIDJOURNEY_API_KEY=

# ============================================
# Analytics & Monitoring (Optional)
# ============================================

# Google Analytics
GA_TRACKING_ID=

# Sentry Error Tracking
SENTRY_DSN=

# DataDog
DATADOG_API_KEY=
DATADOG_APP_KEY=

# ============================================
# Database Configuration
# ============================================

# SQLite (default)
DATABASE_PATH=workspace/production.db

# PostgreSQL (optional, for scale)
# DATABASE_URL=postgresql://user:password@localhost:5432/bookfactory

# ============================================
# Application Settings
# ============================================

# Environment: development, staging, production
ENVIRONMENT=development

# Debug mode
DEBUG=false

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Quality enforcement
QUALITY_ENFORCEMENT_ENABLED=true
QUALITY_STRICT_MODE=false

# Parallel generation
MAX_PARALLEL_BOOKS=4
MAX_PARALLEL_CHAPTERS=10

# Rate limiting
RATE_LIMIT_ENABLED=true
REQUESTS_PER_MINUTE=60

# ============================================
# Security Settings
# ============================================

# Encryption key for sensitive data (generate with: openssl rand -hex 32)
ENCRYPTION_KEY=

# JWT Secret for API authentication (generate with: openssl rand -hex 32)
JWT_SECRET=

# Admin credentials (for future web interface)
ADMIN_USERNAME=admin
ADMIN_PASSWORD_HASH=

# ============================================
# Feature Flags
# ============================================

# Enable experimental features
ENABLE_SERIES_COHERENCE=false
ENABLE_MARKETING_COPY=false
ENABLE_AUTO_PUBLISH=false
ENABLE_COVER_GENERATION=true
ENABLE_ANALYTICS_DASHBOARD=false

# ============================================
# Notification Settings (Optional)
# ============================================

# Email notifications
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
NOTIFICATION_EMAIL=

# Slack notifications
SLACK_WEBHOOK_URL=

# Discord notifications
DISCORD_WEBHOOK_URL=